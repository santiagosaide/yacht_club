<div class="page-header">
  <h1>
    Members
    <a href="/members/new" class="btn btn-lg btn-success">New Member</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Email</th>
        <th>Password</th>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @members.each do |member| %>
      <tr>
        <td><%= member.email %></td>
        <td><%= member.password %></td>
        <td><%= member.name %></td>
        <td>
          <a href="/members/<%= member.id %>" class="btn btn-primary">Show</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @members, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
